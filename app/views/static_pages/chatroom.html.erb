<script>
	$(document).ready(function(){

		/* RECEIVE MESSAGE */
		App.chat.received = function(data)
		{
			$('<li>' + data['message'] + '</li>').appendTo($('p'));
		}

		$("#send").click(function(){
			msg =  $("#msg").val()

			/* SEND MESSAGE */
			if(msg) {  // il messagio non pu√≤ essere vuoto
				msg_tot ='<%= current_user.username %>' + ": " + msg  //cambiare con email una volta ottenuta da twitter
				App.chat.send_msg(msg_tot)
				msg = $("#msg").val(null)  // resetta il box del messagio
			}
		})
	})
</script>

<div class="comments-container">
	<div class="comment-main-level">
		<!-- Contenedor del Comentario -->
		<div class="comment-box">
			<div class="comment-head">
				<h1>Chatroom <a class="disable" style="color: #595959;">interact with other users</a></h1>
			</div>
			<div class = 'comment-content' id="chat">
					<div class="container" style="margin-left: -40%; margin-top: -40%">
					  <p><!-- Message zone --></p>
					</div>
			</div>
		</div>
	</div>

  <span id="chat"></span>
  <textarea id="msg" style="width:800px; height: 100px;"></textarea>
  <button id="send" type="button" class="btn btn-light" style="margin-bottom: 8.5%;">Send Message</button>
</div>
