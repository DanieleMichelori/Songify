<script>
	$(document).ready(function(){

		/* RECEIVE MESSAGE */
		App.chat.received = function(data)
		{
			$("#chat").append(data['message']+"<br>")
		}

		$("#send").click(function(){
			name = $("#name").val()  // "#name" da definire
			msg =  $("#msg").val()

			/* SEND MESSAGE */
			if(msg) {  // il messagio non pu√≤ essere vuoto
				App.chat.send_msg(name+': '+msg)
				msg = $("#msg").val(null)  // resetta il box del messagio
			}
		})
	})
</script>

