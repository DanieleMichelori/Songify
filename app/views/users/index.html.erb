<div class="container message">
  <h3 style="color: gray;">Administers Songify's users</h3>
  <br/>

  <h3 style="color: gray;"><% @reps = Report.all %>
      <% @reps.each do |report| %>
          <% @us = User.find(report.user_id) %>
          <% @u = User.find(report.ut.to_i) %>

          <%= @us.username%> just reported
          <% if report.verif == false%> the comment: <% @c = report.comment %><%= @c.body %> of <% end %>
          <%=link_to @u.username, user_show_user_path(@u) %> for <%=report.reason%>
          <% if report.verif == false%> <%= link_to "Remove comment", @c, method: :delete , data: { confirm: "You sure?" }, style: "color: white;" %>
          <%end%>
          <%= link_to 'Ban User', user_ban_path(@u), method: :put, data: { confirm: 'This user will be banned. Proceed?' }, style: "color: black;" %>
          <%= link_to "Delete User", @u, method: :delete, data: { confirm: "This user will be deleted. Proceed?" }, style: "color: black;" %>
      <%end%>
  </h3>
</div>

<div class="row">
    <div class="col-lg-4">
        <div class="container blockquote-twitter-tweet card" style="background-color: rgba(255,255,255,0.65); width: 180%; left: 72%; margin-bottom: 7%; border-radius: 6px;">
            <div class="card-body" style="text-align: center;">
              <% if current_user && (current_user.admin? || current_user.mod?) %>  <!-- -1-->
                <% @users = User.all %>
                <% @users.each do |user| %>
                <div class="timeline-panel">
                    <div class="timeline-heading">
                        <!-- Show user name -->
                        <% if user != current_user %>
                        <h4><%= link_to user.username , user_show_user_path(user), style: "font-size: 16px;" %>
    										<br/>
                        <div class="row stylerow" style="border-bottom: 1px solid #E5E5E5; width: 100%; margin-left: 0%;"></div>
                    </div>
                    <div class="timeline-body">
                      <% if !user.admin? %>  <!--1-->
                        <div class="field">
                          <% if user.ban? %>  <!--2-->
                            <%= link_to 'Unban', user_ban_path(user), method: :put, data: { confirm: 'This user will be unbanned. Proceed?' }, style: "color: black;" %>
                            <% else %>  <!--3-->
                              <%= link_to 'Ban', user_ban_path(user), method: :put, data: { confirm: 'This user will be banned. Proceed?' }, style: "color: black;" %>
                            <% end %>  <!--3-->
                          <% end %>  <!--2-->
                          </div>

                          <div class="field">
                          <% if user.mod? %>  <!--4-->
                            <%= link_to 'Unmod', user_mod_path(user), method: :put, data: { confirm: 'This user will be unmoded. Proceed?' }, style: "color: black;" %>
                            <% else %>  <!--5-->
                              <%= link_to 'Mod', user_mod_path(user), method: :put, data: { confirm: 'This user will be moded. Proceed?' }, style: "color: black;" %>
                            <% end %>  <!--5-->
                          <% end %>  <!--4-->
                          </div>

                      <% if current_user.admin? %>  <!--6-->
                        <div class="field">
                          <% if user.admin? %>  <!--7-->
                            <% else %>  <!--8-->
                              <%= link_to 'Admin', user_admin_path(user), method: :put, data: { confirm: 'This user will be moded. Proceed?' }, style: "color: black;" %>
                            <% end %>  <!--8-->
                          <% end %>  <!--7-->
                        </div>

                      <% if (current_user.admin? || current_user.mod )&& !current_user?(user) && !user.admin%>  <!--9-->
                        <div class="field">
                          <%= link_to "Delete", user, method: :delete, data: { confirm: "This user will be deleted. Proceed?" }, style: "color: black;" %>
                        </div>
                      <% end %>  <!--9-->
                      <br/>
                      <% end %>  <!--0-->
                    </div>
                  </div>
                </div>
            </div>
        </div>
    <% end %>
</div>
